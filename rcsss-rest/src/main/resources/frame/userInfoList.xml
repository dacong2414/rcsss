<!-- 
sqlNo：查询序列号
sqlTitle：列表显示名称
sqlTemp：列表显示jsp模板
extendWidth：扩展功能栏宽度<extendWidth>110px</extendWidth>
sqlDetial：查询正文sql
extendList：扩展功能
extendType：0.详情查询SQL，用于双击查看详情 1.每行显示 （需要替换字段）2.表头显示
fieldInfoList：字段属性
fieldType：字段类型:String,Date,Long,Money
queryType：查询类型
0.表示不提供查询；
1.精确查询 (value=某值)
2.模糊查询(value like %某值%) 
3.数字范围查询(5<=value<=10) 
4.时间日期查询(value=2012-10-11)  
5.时间范围查询 (如：2012-10-31<=value<=2012-12-25) 
6.下拉列表查询
where
 	ui.u_id=##uId##
and
	ui.title=##title##
 -->
<queryInfo>
    <sqlNo>userInfoList</sqlNo>
    <sqlTitle>用户管理</sqlTitle>
    <sqlTemp></sqlTemp>
    <extendWidth></extendWidth>
    <sqlDetial><![CDATA[
SELECT
	ui.u_id,
	ui.title,
	li.login_name,
	ui.description,
	(
		SELECT
			GROUP_CONCAT(sr.role_name)
		FROM
			sys_roles sr,
			sys_users_roles sur
		WHERE
			sur.user_id = ui.u_id
		AND sur.role_id = sr.role_id
	) AS role_name,
(
		SELECT
			maln.mac_address
		FROM
			mac_address_login_name maln
		WHERE
		maln.login_name=li.login_name
		
	) AS mac_address,
	ui.gmt_create
FROM
	user_info ui,
	logon_info li
WHERE
	ui.u_id = li.u_id
AND ui.disable_flag = 1
AND li.disable_flag = 1
AND ui.user_type!=1
	]]></sqlDetial>
    <fieldList>
        <fieldInfo>
            <fieldName>u_id</fieldName>
            <showName>用户ID</showName>
