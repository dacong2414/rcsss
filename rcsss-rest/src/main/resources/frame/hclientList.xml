 传个uId过来查看被这个uId 监控的客户端 
 -->
<queryInfo>
    <sqlNo>hclientList</sqlNo>
    <sqlTitle>诊室端用户</sqlTitle>
    <sqlTemp></sqlTemp>
    <extendWidth></extendWidth>
    <sqlDetial><![CDATA[
SELECT
	l.u_id,
	l.login_name,
	IFNULL(
		(
			SELECT
				GROUP_CONCAT(r.role_name)
			FROM
				sys_roles r,
				sys_users_roles ur
			WHERE
				r.role_id = ur.role_id
			AND ur.user_id = l.u_id

		),
		''
	) AS role_name,
	l.gmt_create,
	##uId## AS monitor_id,
	(
		SELECT
			u.title
		FROM
			user_info u
		WHERE
			l.u_id = u.u_id
	) AS title,
	IFNULL(
		(
			SELECT
				1
			FROM
				monitor_client_mapping mcm
			WHERE
				mcm.monitor_uid = ##uId##
			AND mcm.client_uid = l.u_id
		),
		0
	) AS ckflag
FROM
	logon_info l,
	sys_roles sr,
	sys_users_roles sur
WHERE
	l.u_id = sur.user_id
AND sur.role_id = sr.role_id
AND sr.role_name = 'hclient'
AND l.disable_flag
AND sr.use_flag=1

	]]></sqlDetial>
    <fieldList>
        <fieldInfo>
            <fieldName>u_id</fieldName>
            <showName>用户ID</showName>
